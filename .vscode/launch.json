{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "App Spark: debug full stack",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["server-dev.js"],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "Ready on",
        "uriFormat": "http://localhost:3001",
        "action": "debugWithChrome"
      },
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "App Spark: npm dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "Ready on",
        "uriFormat": "http://localhost:3001",
        "action": "openExternally"
      },
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    }
  ]
}