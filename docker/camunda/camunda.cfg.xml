<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Keycloak Identity Provider Plugin Configuration -->
  <bean id="keycloakConfiguration" class="org.camunda.bpm.extension.keycloak.plugin.KeycloakIdentityProviderPlugin">
    <property name="keycloakIssuerUrl" value="http://keycloak:8081/realms/netbuild"/>
    <property name="keycloakAdminUrl" value="http://keycloak:8081/admin/realms/netbuild"/>
    <property name="clientId" value="camunda-identity-service"/>
    <property name="clientSecret" value="camunda-secret-change-in-production"/>
    <property name="useGroupPathAsCamundaGroupId" value="true"/>
    <property name="useUsernameAsCamundaUserId" value="true"/>
    <property name="useEmailAsCamundaUserId" value="false"/>
    <property name="administratorGroupName" value="camunda-admin"/>
    <property name="disableSSLCertificateValidation" value="true"/>
  </bean>

</beans>